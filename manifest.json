{
    "manifest_version": 3,
    "name": "Language Needs Repetition",
    "version": "1.2",
    "description": "Display saved sentences or phrases on web",
    "permissions": ["storage", "activeTab", "webNavigation"],
    "action": {
      "default_icon": "32.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    }
  }
  